{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/ui/hero.jsx", "app/(routes)/dashboard/_components/SideNav.jsx", "app/(routes)/workspace/_components/Header.jsx", "app/(routes)/workspace/_components/Editor.jsx", "app/(routes)/workspace/_components/Canvas.jsx", "app/(routes)/workspace/[fileId]/page.jsx", "app/(routes)/dashboard/page.jsx", "app/(routes)/dashboard/layout.jsx", "app/(routes)/teams/create/page.jsx"],
  "exclude": ["node_modules"]
}
